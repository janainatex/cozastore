@model IEnumerable<Cozastore.Models.Categoria>
@{
    ViewData["Title"] = "Categorias";
Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

 <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-warning shadow-primary border-radius-lg pt-4 pb-3 d-flex aling-items-center jsutify-content-between ">
                <h6 class="text-white text-capitalize ps-3 d-flex aling-items-center">Categorias</h6>
                <a class="text-white text-capitalize ps-3" asp-action="Create">
                    <i class="material-icons opacity-10 me-2">add</i>Adicionar
                </a>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center justify-content-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nome</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Categoria</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Filtro</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Banner</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Açoes</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                             <td class="text-dark text-sm ps-4">
                        @Html.DisplayNameFor(model => model.Nome)
                        </td>

                         <td class="text-dark text-sm ps-4">
                       @Html.DisplayNameFor(model => model.CategoriaPai)
                             </td>

                             <td class="text-dark text-sm ps-4">
                                @(item.Filtra ? "Sim" : "Não ")
                             </td>

                             <td class="text-dark text-sm ps-4">
                                @(item.Banner ? "Sim " : "Não")
                             </td>

             <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
                        </tr>
                     }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filtra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Banner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaPai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filtra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Banner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaPai.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
