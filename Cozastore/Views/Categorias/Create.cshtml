@model Cozastore.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Categoria</h1>
<h4>Cadastro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="Post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Filtra" /> @Html.DisplayNameFor(model => model.Filtra)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Banner" /> @Html.DisplayNameFor(model => model.Banner)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaPaiId" class="control-label"></label>
                <select asp-for="CategoriaPaiId" class ="form-control" asp-items="ViewBag.CategoriaPaiId">
                    <option value="">Nenhuma Categoria</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <img id="Preview" class="img-fluid w-100"/>
                <input type="file" asp-for="Foto" class="form-control" accept=".Jpg,.Jpeg,.png,.gif,.jfif"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section section{
    <script>
        window.addEventListener("load", function () {
            document.querySelector(input[type= 'file']) .addEventListener('change',function()){ 
                if(this.File && this.files[0]){
                    var img = document.getElementById('Preview');
                    img.src = URL.createObjectURL(this.files[0]);
                 }

            })

        });
    </script>
}

